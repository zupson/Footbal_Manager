        xmlns:local="clr-namespace:WpfApp.Windows"
        mc:Ignorable="d"
        Title="StartingElevenWindow" Height="800" Width="1000">
    
    <Grid Name="TeamGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/footbalPlayground.jpg"/>
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
