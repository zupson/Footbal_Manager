            <ColumnDefinition Width="*"></ColumnDefinition><!-- Defenders  FAV-->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- Midfielders FAV -->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- Forwarders  FAV-->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- prazno  -->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- Forwarders RIVAL -->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- MidFileder RIVAL  -->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- Defenders  RIVAL-->
            <ColumnDefinition Width="*"></ColumnDefinition><!-- Goalie RIVAL -->
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
