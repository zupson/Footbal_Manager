<UserControl x:Class="WpfApp.UserControls.PlayerDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <Border BorderBrush="Black" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="imgPlayerProfile" Grid.Column="0" Width="100" Height="120" Margin="5"
               Source="{Binding Player.ImagePath}" VerticalAlignment="Top"/>

                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{Binding Player.Name}" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Grid.Row="1" Text="{Binding Player.Position}" />

                    <StackPanel Grid.Row="2" Orientation="Horizontal">
                        <TextBlock Text="Kapetan: "/>
                        <TextBlock Text="{Binding Player.IsCaptain}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal">
                        <TextBlock Text="Golovi: "></TextBlock>
                        <TextBlock Text="{Binding Player.ScoredGoals}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <TextBlock Text="Žuti kartoni: "></TextBlock>
                        <TextBlock Text="{Binding Player.YellowCards}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
