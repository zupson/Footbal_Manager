<UserControl x:Class="WpfApp.UserControls.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d" 
    d:DesignHeight="70" d:DesignWidth="70"

    MinWidth="70" MinHeight="70">
    <Grid>
        <Ellipse Fill="{Binding TeamColor}" Stroke="Black" StrokeThickness="1"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Text="{Binding Name}" Foreground="WhiteSmoke" 
                       FontSize="8" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ShirtNumber}" Foreground="WhiteSmoke" 
                       FontWeight="Bold" VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
