<UserControl x:Class="WpfApp.UserControls.PlayerDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Padding="10">
        <StackPanel Orientation="Horizontal">
                <Image Width="100" Height="120" Margin="5" Source="{Binding Player.ImagePath}">
                </Image>
                <StackPanel Margin="10,0,0,0" HorizontalAlignment="Right">
                <TextBlock Text="{Binding Player.Name}" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Player.Position}" />
                <TextBlock Text="Kapetan: " />
                    <TextBlock Text="{Binding Player.IsCaptain}" />
            </StackPanel>
        </StackPanel>
        </Border>
    </Grid>
</UserControl>
