<Window x:Class="WpfApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="768" MinHeight="500" MinWidth="400"  WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">
    
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Postavke">
                <MenuItem Header="Otvori postavke" Click="OpenInitialSettingsWindow_Click" ></MenuItem>
            </MenuItem>
        </Menu>

        
        <Grid Margin="30">
            <!--VerticalAlignment="Center" HorizontalAlignment="Center"-->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <ComboBox Name="cbSavedFavTeam" Grid.Row="1" Grid.Column="0" 
                  Height="40" Margin="10"  
                  FontSize="20"
                  VerticalAlignment="Center" 
                  SelectionChanged="cbFavTeam_SelectionChanged"></ComboBox>

            <ComboBox Name="cbRivalTeam" Grid.Row="1" Grid.Column="4" 
                  Height="40" Margin="10" 
                  FontSize="20"
                  VerticalAlignment="Center" 
                  SelectionChanged="cbRivalTeam_SelectionChanged"></ComboBox>

            <Label Grid.Row="0" Grid.Column="2" FontSize="20" Margin="30"
                HorizontalAlignment="Center" VerticalAlignment="Bottom">Rezultat</Label>

            <Label Name="lbSavedFavTeamResult" Grid.Row="1" Grid.Column="1" 
               Width="30" Height="Auto" FontSize="35"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>

            <Label Name="lbRivalTeamResult" Grid.Row="1" Grid.Column="3" 
               Width="30" Height="Auto" FontSize="35" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>

            <Button Name="btnSavedFavTeamDetails"  Grid.Row="2" Grid.Column="0"  Width="150" Height="35"
                FontSize="10"  Margin="15" HorizontalAlignment="Left" 
                Click="btnSavedFavTeamDetails_Click">Detalji</Button>

            <Button Name="btnRivalTeamDetails"  Grid.Row="2" Grid.Column="4" Width="150" Height="35" 
                FontSize="12" HorizontalAlignment="Right" Margin="15" 
                Click="btnRivalTeamDetails_Click">Detalji</Button>

            <Button Name="btnShowStartingLineUpOfTeams"  Grid.Row="2" Grid.Column="2" Width="150" Height="35" 
                FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="15" 
                Click="btnShowStartingLineUpOfTeams_Click">Prikazi početnu psotavu</Button>

        </Grid >
    </DockPanel>
</Window>
