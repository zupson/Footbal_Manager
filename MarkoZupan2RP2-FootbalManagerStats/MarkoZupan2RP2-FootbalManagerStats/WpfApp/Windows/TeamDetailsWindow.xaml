<Window x:Class="WpfApp.Windows.TeamDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="TeamDetailsWindow" Height="300" Width="400"
        Opacity="0"
        Loaded="Window_Loaded">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content=" FIFA kod:"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Name="tbFifaCode"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Zaleđa:"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="tbOffsides"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Pokušaji na gol:"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Name="tbAttemptsOnGoal"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Crveni kartoni:"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Name="tbRedCards"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Žuti kartoni:"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Name="tbYellowCards"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Korneri:"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Name="tbCorners"/>
        
        <Label Grid.Row="6" Grid.Column="0" Content="Penali:"/>
        <TextBlock Grid.Row="6" Grid.Column="1" Name="tbPenalties"/>
   </Grid>
</Window>
